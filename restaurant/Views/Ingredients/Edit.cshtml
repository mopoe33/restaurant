@model restaurant.Models.Ingredient

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_layoutDashboard.cshtml";
}

<h1>Edit</h1>

<h4>Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prixUt" class="control-label"></label>
                <input asp-for="prixUt"  type="number" class="form-control" />
                <span asp-validation-for="prixUt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="expirationDate" class="control-label"></label>
                <input asp-for="expirationDate" class="form-control" />
                <span asp-validation-for="expirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button style="background-color:#ff914d"><a style="color:white" asp-action="Index">Back to List</a></button>
</div>

<script src="~/js/main.js"></script>
