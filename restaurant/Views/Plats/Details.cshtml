@model restaurant.Models.Plat

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_layoutDashboard.cshtml";
}

    <h1 class="title">Plat Details</h1>

    <div class="details">
        <table>
            <thead>
                <tr>
                    <th colspan="2">Details</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>Nom</strong></td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td><strong>Description</strong></td>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <td><strong>Prix</strong></td>
                    <td>@Html.DisplayFor(model => model.Price)DH</td>
                </tr>
                <tr>
                    <td><strong>Image</strong></td>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="~/@Model.ImagePath" alt="@Model.Name" class="plat-image" />
                        }
                        else
                        {
                            <span>No image available</span>
                        }
                    </td>
                </tr>
                <tr>
                    <td><strong>Ingredients</strong></td>
                    <td>
                        @if (Model.PlatIngredients != null && Model.PlatIngredients.Any())
                        {
                            <ul class="ingredient-list">
                                @foreach (var platIngredient in Model.PlatIngredients)
                                {
                                    <li>
                                        @platIngredient.Ingredient.Name
                                       
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>No ingredients assigned</span>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="btn-action">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-edit">Edit</a>
        <a asp-action="Index" class="btn btn-back">Back to List</a>
    </div>

<script src="~/js/main.js"></script>
