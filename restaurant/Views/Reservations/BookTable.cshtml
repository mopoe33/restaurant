@model restaurant.Models.BookingTable

@{
    ViewData["Title"] = "BookTable";
    Layout = "~/Views/Shared/_layoutUsers.cshtml";
}

<div class="content-main">
    <div class="tables">
        <h1>Book Table</h1>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="BookTable" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="TableId" class="control-label">Numero de table</label>
                        <input asp-for="TableId" class="form-control" value="@Model.TableId" readonly />
                        <span asp-validation-for="TableId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="bookingDateStart" class="control-label">Date Debut</label>
                        <input asp-for="bookingDateStart" type="datetime-local" class="form-control" />
                        <span asp-validation-for="bookingDateStart" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BookingDateEnd" class="control-label">Date Fin</label>
                        <input asp-for="BookingDateEnd" type="datetime-local" class="form-control" />
                        <span asp-validation-for="BookingDateEnd" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Reserve" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
