@model restaurant.Models.Serveur

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_layoutDashboard.cshtml";
}

<h1>Details</h1>

<div class="details">
    <table>
        <thead>
            <tr>
                <th colspan="2">Details</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Prénom</strong></td>
                <td>@Html.DisplayFor(model => model.firstName)</td>
            </tr>
            <tr>
                <td><strong>Nom</strong></td>
                <td>@Html.DisplayFor(model => model.lastName)</td>
            </tr>
            <tr>
                <td><strong>Heure de Début</strong></td>
                <td>@Html.DisplayFor(model => model.timeStart)</td>
            </tr>
            <tr>
                <td><strong>Heure de Fin</strong></td>
                <td>@Html.DisplayFor(model => model.timeEnd)</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="btn-action">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-edit">Edit</a>
    <a asp-action="Index" class="btn btn-back">Back to List</a>
</div>
<script src="~/js/main.js"></script>
