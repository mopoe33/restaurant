@model restaurant.Models.Serveur

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_layoutDashboard.cshtml";
}

<h1>Create</h1>

<h4>Serveur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="firstName" class="control-label">Nom</label>
                <input asp-for="firstName" class="form-control" />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label">Prenom</label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="timeStart" class="control-label">Heure Debut</label>
                <input asp-for="timeStart" class="form-control" />
                <span asp-validation-for="timeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="timeEnd" class="control-label">Heure Fin</label>
                <input asp-for="timeEnd" class="form-control" />
                <span asp-validation-for="timeEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button style="background-color:#ff914d"><a style="color:white" asp-action="Index">Back to List</a></button>
</div>

<script src="~/js/main.js"></script>


